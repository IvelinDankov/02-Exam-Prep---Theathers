<div class="container">

  <section class="details">
    <h1>Theater title: {{play.title}}</h1>
    <div>
      <img src="{{play.imageUrl}}" style="width: 50%; height: 300px" />
    </div>
  </section>

  <section class="details">
    <h3>Theater Description</h3>
    <p>{{play.description}}</p>
    {{#if isOwner}}
      <div class="buttons">
        <a class="btn delete" href="/plays/{{play.id}}/delete">Delete</a>
        <a class="btn edit" href="/plays/{{play.id}}/edit">Edit</a>
        {{else}}
        {{#if liked}}
        <span class="liked">You have already liked this play!</span>
        {{else}}
        <a class="btn like" href="/plays/{{play.id}}/like">Like</a>
        {{/if}}
      </div>
    {{/if}}
  </section>
</div>